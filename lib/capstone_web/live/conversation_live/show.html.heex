    <%= for message <- @messages ++ [@streaming_message] do %>
      <li>
        <%= if message.content != "" do %>
          <strong><%= message.sender_id %>:</strong>
          <%= message.content %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div> --%>

<div>
  <h2>New Message:</h2>
  <form phx-submit="new_message">
    <label for="content">Content:</label>
    <input type="text" id="content" name="message[content]" required />
    <input
      type="hidden"
      type="text"
      id="message_type"
      name="message[message_type]"
      value="human"
      required
    />
    <button type="submit">Send</button>
  </form>
</div>

<.back navigate={~p"/conversations"}>Back to conversations</.back>

<.modal
  :if={@live_action == :edit}
  id="conversation-modal"
  show
  on_cancel={JS.patch(~p"/conversations/#{@conversation}")}
>
  <.live_component
    module={CapstoneWeb.ConversationLive.FormComponent}
    id={@conversation.id}
    title={@page_title}
    action={@live_action}
    conversation={@conversation}
    patch={~p"/conversations/#{@conversation}"}
  />
</.modal>
