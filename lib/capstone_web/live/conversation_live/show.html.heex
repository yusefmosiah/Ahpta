<div>
  <h2>Messages:</h2>
  <ul>
    <%= for message <- @messages do %>
      <li>
        <strong><%= message.sender_id %>:</strong>
        <%= message.content %>
      </li>
    <% end %>
    <%= for {id, content} <- @ongoing_messages do %>
      <li>
        <strong><%= id %>:</strong>
        <%= content %>
      </li>
    <% end %>
  </ul>
</div>


<%!-- <div>
  <h2>Messages:</h2>
