<.header>
  Conversation participant <%= @conversation_participant.id %>
  <:subtitle>This is a conversation_participant record from your database.</:subtitle>
  <:actions>
    <.link
      patch={~p"/conversation_participants/#{@conversation_participant}/show/edit"}
      phx-click={JS.push_focus()}
    >
      <.button>Edit conversation_participant</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Participant type"><%= @conversation_participant.participant_type %></:item>
  <:item title="Owner permission"><%= @conversation_participant.owner_permission %></:item>
</.list>

<.back navigate={~p"/conversation_participants"}>Back to conversation_participants</.back>

<.modal
  :if={@live_action == :edit}
  id="conversation_participant-modal"
  show
  on_cancel={JS.patch(~p"/conversation_participants/#{@conversation_participant}")}
>
  <.live_component
    module={CapstoneWeb.ConversationParticipantLive.FormComponent}
    id={@conversation_participant.id}
    title={@page_title}
    action={@live_action}
    conversation_participant={@conversation_participant}
    patch={~p"/conversation_participants/#{@conversation_participant}"}
  />
</.modal>
